{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "outDir": "js",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "mocha"],
    "stripInternal": true
  },
  "include": ["src/**/*"]
}
